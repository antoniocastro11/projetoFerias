generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Idea {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  stack       String?
  ideaType    IdeaType?
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

enum IdeaType {
  WebApp
  MobileApp
  Game
  Automation
}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  ideas Idea[]
  refreshToken String?
}